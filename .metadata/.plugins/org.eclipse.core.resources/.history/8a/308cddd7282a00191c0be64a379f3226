package firstApplication;
import java.util.Random;

public class Bingo_Card {

	private static int[][] cards;
	private static Random random;
	private String[][] cards2;

	public Bingo_Card(Random chance) {
		// TODO Auto-generated constructor stub
	}

	public static void main1(String[] args){
		      int[][] card = new int[5][5];
		      for (int c = 0; c < 5; c++)
		         {
		            random = null;
					for (int r = 0; r < 5; r++)
		               card[r][c] = random.nextInt(14) + c * 15 + 1;
		            checkForDuplicateValues(c, random);
		         }
		      card[2][2] = 99; //Free Space
		   }
		    
		   public static void checkForDuplicateValues(int c, Random random)
		   {
		      int yikes = 0;
		      boolean done = false;
		      int t = 0;
		      while (done != true)
		      {
		         for (int r = t + 1; r < 5; r++)
		         {
		            cards = null;
					if (cards[r][c] == cards[t][c])
		            {
		               cards[r][c] = random.nextInt(14) + c * 15 + 1;
		               yikes++;
		            }
		            t++;
		         }
		         if(yikes == 0)
		            done = true;
		         else
		         {
		            yikes = 0;
		            t = 0;
		         }
		      }
		   }
		    
		   public String toString()
		   {
		      String display = "";
		      for(int r = 0; r < 5; r++)
		      {
		         cards2 = null;
				for(int c = 0; c < 5; c++)
		            display += cards2[r][c] + " ";
		         display += "\n";
		      }
		      return display;
		   }
		    
		   public static void main (String args[])
		   {
		      Bingo_Card[] cards = new Bingo_Card[30];
		      Random chance = new Random();
		      for(int c = 0; c < cards.length; c++)
		         cards[c] = new Bingo_Card(chance);
		      System.out.println(cards[0]);
		   }
		
	}


